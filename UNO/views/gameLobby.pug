extends layout

block content
  include chat.pug

  table
     thead
       tr
         th Games:
     tbody
       each game in games
         tr
           td= game.id

  .main.container
    .row
      .col-md-6.col-md-offset-3
        h4 Host Game

        // Host Game form
        form(method='POST' action='/gameLobby')
          div.form-group

          button.btn.btn-primary(type='submit') Host Game
        
        form(method='POST' action='/joinGame')
          div.form-group

          button.btn.btn-primary(type='submit') Join Game

        if errors 
          ul
            for error in errors
              li!= error.msg