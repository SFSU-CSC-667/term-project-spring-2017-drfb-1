  .main.container
    .row
      .col-md-6.col-md-offset-3
        h4 Host Game

        // Host Game form
        form(method='POST' action='/gameLobby')
          div.form-group

          button.btn.btn-primary(type='submit') Host Game
        
        h5 Games in Progess

        table
           tbody
             each game in games
               tr
                 input.checkbox(type='checkbox', name='check[]', value= game.id)
                 labeltd= game.id
               
        button.btn.btn-primary(method='GET' onclick= "location.href='/game/1'" ) Join Game

        if errors 
          ul
            for error in errors
              li!= error.msg
