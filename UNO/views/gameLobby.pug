extends layout

block content
  include chat.pug

  table
     thead
       tr
         h4 Game Rooms 
     tbody
       each game in games
         tr
           h5= game.id

  .main.container
    .row
      .col-md-6.col-md-offset-3
        h5 #{username}

        h4 Host Game
        // Host Game form
        form(method='POST' action='/gameLobby')
          div.form-group

          button.btn.btn-primary(type='submit') Host Game

        br
        br

        h4 Enter the Game Room Number to join:

        form(method='POST' action='/game')
          div.form-group
            label(for='name') Game Room Number:
            input#name.form-control(type='text', placeholder='' name='gameid' required='true')

          button.btn.btn-primary(type='submit') Join Game

        if errors 
          ul
            for error in errors
              li!= error.msg
