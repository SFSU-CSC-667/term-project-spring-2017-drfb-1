extends layout

block content
  .main.container
    .row.text-center
     .media
      .media-middle
       img(src='/images/UNO.png', style='width:250px')
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Log In

        // Login form
        form(method='POST' action='/gameLobby')
          div.form-group
            label(for='name') Username:
            input#name.form-control(type='text', placeholder='Username' name='name')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          button.btn.btn-primary(type='submit') Log In
          a.btn.btn-info(href='/register', role='button') Register


