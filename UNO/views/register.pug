extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        // register form
        form(method='POST' action='/register')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='username' name='name' required='true')
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='e-mail' name='email' required='true')
            label(for='pw') Password:
            input#pw.form-control(type='password' name='pw' required='true')
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='pw2' required='true')
          button.btn.btn-primary(type='submit') Sign up
        if errors 
          ul
            for error in errors
              li!= error.msg