extends layout

block content
  body 
    .container(style="background-color:white")
      #player3.row.text.center
            .col-md-4
            .col-md-2
              img.img-responsive.center-block(src='/images/user.png' width='72' height='120')
            .col-md-3
              .row.text.center
                h6 Player 3
              //.row Cards in Hand 0 
            .col-md-3
      .row(style="background-color:white")
        #playarea.col-md-8.col-md-offset-2
          .row
            .col-md-1
            .col-md-2
              .row
                img.img-responsive.center-block(src='/images/user.png' width='72' height='120')
              .row.text.center
                h6 Player 2
              //.row Cards in Hand 0 
            #cardpile.middle.col-md-6
              .card-group
                .card
                  img.img-responsive.center-block(src='/images/UnoCard/B.png')
                  .card-block
                    button#drawFromDeck.btn.btn-primary.btn-group-justified Draw
                .card
                  img#top-card.img-responsive.center-block(src='/images/UnoCard/Q.png')
                  .card-block
                    button#UNO.btn.btn-danger.btn-group-justified UNO    
            .col-md-2
              .row
                img.img-responsive.center-block(src='/images/user.png' width='72' height='120')
              .row.text.center
                h6 Player 4
              //.row Cards in Hand 0 
            .col-md-1
          .row.text-center
            button#start.btn.btn-success Start
            button#ready.btn.btn-info Ready
            #username.h6 #{username}

          .row
            input#cardToPlay(type='text', value ='')
            button.btn.btn-primary(onclick='playCard()') PlayCard

            a#end.btn.btn-danger(href='/gameLobby') End Game

      .col-lg-12
      
        .row(style="background-color:white; height:120px;")
          table
            thead#table-card
              tr#table-head
                //- th(width=72) 1
                //- th(width=72) 2
                //- th(width=72) 3
                //- th(width=72) 4
                //- th(width=72) 5
                //- th(width=72) 6
                //- th(width=72) 7
                //- th(width=72) 8
                //- th(width=72) 9
                //- th(width=72) 10
                //- th(width=72) 11
                //- th(width=72) 12
                //- th(width=72) 13
                //- th(width=72) 14
                //- th(width=72) 15
                //- th(width=72) 16
            tbody
              tr#table-body

        .row
  include chat.pug
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/game.js' userid = userid, username = username, gameid = gameid)
    script(src='/javascripts/bundle.js')