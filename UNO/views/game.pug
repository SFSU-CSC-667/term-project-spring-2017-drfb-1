extends layout
block content
  h1 Game page
  //- img#card(src="/images/UnoCard/Q.png" height=380 width=245)
  canvas#canvas(height=1000, width=1100, style="border:1px solid;")
  script.
    var q_card = new Image();
    var blue0 = new Image();
    var blue1 = new Image();
    var blue2 = new Image();
    var blue3 = new Image();
    var blue4 = new Image();
    var blue5 = new Image();
    var blue6 = new Image();
    var blue7 = new Image();
    var blue8 = new Image();
    var blue9 = new Image();

    var canvas = document.getElementById("canvas");
    var ctx = canvas.getContext("2d");

    var action = 0;

    window.onload = function() {    
      ctx.drawImage(q_card,0,10,q_card.width*0.2, q_card.height*0.2);
    }
      document.getElementById("canvas").addEventListener("click", function(){
      if(action == 0) {
        ctx.drawImage(blue0,100,10,blue0.width*0.2, blue0.height*0.2);
        action++;
      } else if(action == 1) {
        ctx.drawImage(blue1,200,10,blue1.width*0.2, blue1.height*0.2);
        action++;
      } else if(action == 2) {
        ctx.drawImage(blue2,300,10,blue2.width*0.2, blue2.height*0.2);
        action++;
      } else if(action == 3) {
        ctx.drawImage(blue3,400,10,blue3.width*0.2, blue3.height*0.2);
        action++;
      } else if(action == 4) {
        ctx.drawImage(blue4,500,10,blue4.width*0.2, blue4.height*0.2);
        action++;
      } else if(action == 5) {
        ctx.drawImage(blue5,600,10,blue5.width*0.2, blue5.height*0.2);
        action++;
      } else if(action == 6) {
        ctx.drawImage(blue6,700,10,blue6.width*0.2, blue6.height*0.2);
        action++;
      } else if(action == 7) {
        ctx.drawImage(blue7,800,10,blue7.width*0.2, blue7.height*0.2);
        action++;
      } else if(action == 8) {
        ctx.drawImage(blue8,900,10,blue8.width*0.2, blue8.height*0.2);
        action++;
      } else if(action == 9) {
        ctx.drawImage(blue9,1000,10,blue9.width*0.2, blue9.height*0.2);
        action++;
      }
      }, false);


    q_card.src = 'images/UnoCard/Q.png';
    blue0.src= 'images/UnoCard/blue0.png';
    blue1.src= 'images/UnoCard/blue1.png';
    blue2.src= 'images/UnoCard/blue2.png';
    blue3.src= 'images/UnoCard/blue3.png';
    blue4.src= 'images/UnoCard/blue4.png';
    blue5.src= 'images/UnoCard/blue5.png';
    blue6.src= 'images/UnoCard/blue6.png';
    blue7.src= 'images/UnoCard/blue7.png';
    blue8.src= 'images/UnoCard/blue8.png';
    blue9.src= 'images/UnoCard/blue9.png';

